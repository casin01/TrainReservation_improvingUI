<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--한 item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!-- 상단바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c5cae9"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mydate"
                android:textStyle="bold"
                android:text="2022년 11월 01일 (금)"
                android:layout_marginLeft="10dp"
                android:textAppearance="@style/b11Text" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="2매"
                android:id="@+id/ticketnum"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/b11Text" />

        </LinearLayout>

        <!-- 내용 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <!-- 기차 종류, 번호-->
            <TextView
                android:id="@+id/trainTypeNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[ KTX 1444 ]"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textAppearance="@style/nonText" />


            <!-- 출발, 도착 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서울 (18:00)"
                    android:textAppearance="@style/b11Text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text= "  -->  "
                    android:textAppearance="@style/b11Text" />

                <TextView
                    android:id="@+id/arr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수원 (20:00)"
                    android:textAppearance="@style/b11Text" />

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

</LinearLayout>
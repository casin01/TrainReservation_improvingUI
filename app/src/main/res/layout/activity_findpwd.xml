<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".findpwdActivity">

    <TextView
        android:id="@+id/alerttxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="회원가입 시 입력했던 정보를 \n입력하세요."
        android:textAppearance="@style/b11Text" />

    <!-- 회원번호 -->
    <LinearLayout
        android:id="@+id/lay1"
        android:layout_below="@id/alerttxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/b11Text"
            android:text="회원번호(아이디)" />

        <EditText
            android:id="@+id/userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/b13Text"
            android:inputType="textPersonName"
            android:ems="6"
            android:hint="id123" />

    </LinearLayout>

    <!-- 이름 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay3"
        android:layout_below="@id/lay1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/b11Text"
            android:text="이름" />

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:textAppearance="@style/b13Text"
            android:inputType="textPersonName"
            android:hint="김눈송" />
    </LinearLayout>

    <!-- 핸드폰 번호 -->

    <LinearLayout
        android:id="@+id/lay4"
        android:layout_below="@id/lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/b11Text"
            android:text="핸드폰 번호" />

        <EditText
            android:id="@+id/userPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/b13Text"
            android:ems="8"
            android:inputType="phone"
            android:hint="01012345678"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/gobtn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="13pt"
            android:textAppearance="@style/btnText"
            android:background="@color/active"
            android:text="비밀번호 찾기" />
    </LinearLayout>

</RelativeLayout>